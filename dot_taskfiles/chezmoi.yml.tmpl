---
version: '3'

vars:
  CHEZMOI_LOCAL: {{ .chezmoi.sourceDir | quote }}
  CHEZMOI_REMOTE: "git@github.com:onedr0p/dotfiles.git"

tasks:

  reload:
    desc: Reload chezmoi configuration file
    cmds:
    - chezmoi --source {{ "{{.CHEZMOI_LOCAL}}" }} init {{ "{{.CHEZMOI_REMOTE}}" }}
    silent: true
